<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- Driver Class definition -->
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>

		<!-- Java SQL connection syntax: jdbc:database-type://domain:port/internal-database -->
		<property name="hibernate.connection.url">jdbc:postgresql:rev-postgres.cpq4fhgvtmpk.us-east-2.rds.amazonaws.com:5432/postgres</property>
		<property name="hibernate.connection.username">project2</property>
		<property name="hibernate.connection.password">190701-revature</property>
		
		<!-- Configuration option that tells Hibernate to print the SQL 
		commands it generates, which is useful for testing and learning -->
		<property name="show_sql">true</property>
		
		<property name="hibernate.connection.pool_size">1</property>
		
		<!-- Hibernate Dialect -->
		<!--  Configures what dialect of SQL that should be generated by
				Hibernate -->
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		
		<!-- Configuration for hibernate to automatically update table structure
		based on entity model definition -->
		<!-- https://docs.jboss.org/hibernate/orm/5.2/userguide/html_single/Hibernate_User_Guide.html#configurations-hbmddl -->
		
		<property name="hibernate.hbm2ddl.auto">update</property>
		
	</session-factory>
</hibernate-configuration>







